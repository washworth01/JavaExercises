		ship[3].setPlacement(1);
		ship[4].setSize(2);
		ship[4].setAllignment(0);
		ship[4].setPlacement(1);
		int[][] boardSpaces = new int[8][8];
		
		for(int []x : boardSpaces)
		{
			for(int y : x)
