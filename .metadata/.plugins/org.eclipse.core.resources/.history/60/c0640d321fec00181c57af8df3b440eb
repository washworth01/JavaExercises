package conditionals2;

public class Main 
{
	public static void main(String[] args)
	{
		boolean isadd = false;
		System.out.println(addition(3, 0, isadd));
	}
	
	public static int addition(int num1, int num2, boolean add)
	{
		int sum;
		if (num1 == 0)
		{
			return num2;
		}
		else if (num2 == 0)
		{
			return num1;
		}
		else
		{
			if (add == true)
			{
				sum = num1 + num2;
			}
			else
			{
				sum = num1 * num2;
			}
		}
		return sum;
	}

}
